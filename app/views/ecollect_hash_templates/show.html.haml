:css
  .floatLeft { width: 50%; float: left; }
  .floatRight {width: 50%; float: right; }
  .container { overflow: hidden; }
.form-horizontal.show_form
  .form-main-with-color{:style => "background-color: #F1F2F8;"}
    #form-details
      %h3 ECollect Hash Details
      %p{:style => 'text-align:left; padding-left:6px; padding-bottom:17px'}
        - can = can? :edit, @ecollect_hash_template
        %a.btn{:href => "#{!(can) ? '#' : '/ecollect_hash_templates/' + @ecollect_hash_template.id.to_s + '/edit'}", :role => "button", :class => "btn btn-primary #{(can) ? '' : 'disabled'}"} Edit
      .container
        .floatLeft
          %table.table.no-border
            %tr
              %td.label Request Template ID
              %td.value
                = @ecollect_hash_template.request_template_id
              %td
            %tr
              %td.label Checksum Type
              %td.value
                = @ecollect_hash_template.checksum_type
              %td
            %tr
              %td.label Parameter Type
              %td.value
                = @ecollect_hash_template.parameter_type
              %td
            %tr
              %td.label Hash Key
              %td.value
                = @ecollect_hash_template.key
              %td
            %tr
              %td.label Request
              %td.value
                = text_area(:ecollect_hash_template,:request,:cols => 3, :rows => 3,:readonly => true)
              %td
        .floatRight
          %table.table.no-border
            %tr
              %td.label Created By
              %td.value
                = @ecollect_hash_template.created_user.try(:username)
              %td
            %tr
              %td.label Updated By
              %td.value
                = @ecollect_hash_template.updated_user.try(:username)
              %td
            %tr
              %td.label Created At
              %td.value
                = @ecollect_hash_template.created_at.try(:strftime, "%d/%m/%Y %I:%M%p")
              %td
            %tr
              %td.label Updated At
              %td.value
                = @ecollect_hash_template.updated_at.try(:strftime, "%d/%m/%Y %I:%M%p")
              %td

      %table.table.table-bordered.table-striped.table-hover
        .thead
          %th{:style=>'text-align:left; background-color: lightblue;'}
            Format Data Type
          %th{:style=>'text-align:left; background-color: lightblue;'}
            Key Value
          %th{:style=>'text-align:left; background-color: lightblue;'}
            Parameter Type
          %th{:style=>'text-align:left; background-color: lightblue;'}
            Key
          %th{:style=>'text-align:left; background-color: lightblue;'}
            Value Type
          %th{:style=>'text-align:left; background-color: lightblue;'}
            Format
              
        .tbody
          - @ecollect_hash_template.try(:ecollect_hash_parameters).try(:each) do |ecollect_hash_parameter|
            %tr
              %td{:style=>'text-align:left;'}
                = ecollect_hash_parameter.format_datatype
              %td{:style=>'text-align:left;'}
                = ecollect_hash_parameter.value
              %td{:style=>'text-align:left;'}
                = ecollect_hash_parameter.parameter_type
              %td{:style=>'text-align:left;'}
                = ecollect_hash_parameter.key
              %td{:style=>'text-align:left;'}
                = ecollect_hash_parameter.value_type
              %td{:style=>'text-align:left;'}
                = ecollect_hash_parameter.format

      = link_to :Back,'/ecollect_hash_templates', :name => 'cancel', :class=>"cancel btn",:style => "float: right;margin: 16px;"
