/ %br
/ = link_to 'New ECollect Request Template', new_ecollect_request_template_path
/ %br
%br
%h1 Listing ECollect Request Template
/ %h2.collapsible
/   Advanced Search
/   %span.caret
/ .collapsible-content
/   = render :partial => 'advanced_search'
%br
= "Total Count: #{@ecollect_request_templates.count}"
%br
= will_paginate @ecollect_request_templates, :page_links => true
%br
%table.table.table-bordered.table-striped.table-hover
  .thead
    %th{:style=>'text-align:left; background-color: lightblue;'}
    %th{:style=>'text-align:left; background-color: lightblue;'}	
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Request Template Code
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Customer Code
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Request Type
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Is Encryption enabled?
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Hash enabled?
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Request
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Url
        
  .tbody
    - @ecollect_request_templates.each do |ecollect_request_template|
      %tr
        %td{:style=>'text-align:left;'}
          = link_to 'Show', ecollect_request_template_path(ecollect_request_template)
        %td{:style=>'text-align:left;'}
          = link_to 'Edit', edit_ecollect_request_template_path(ecollect_request_template)
        %td{:style=>'text-align:left;'}
          = ecollect_request_template.step_name.present? ? "REQ#{ecollect_request_template.step_name}-#{ecollect_request_template.id}" : ""
        %td{:style=>'text-align:left;'}
          = ecollect_request_template.client_code
        %td{:style=>'text-align:left;'}
          = ecollect_request_template.request_type
        %td{:style=>'text-align:left;'}
          = ecollect_request_template.is_encryption_required == true ? "Y" : "N"
        %td{:style=>'text-align:left;'}
          = ecollect_request_template.is_hash_required == true ? "Y" : "N"
        %td{:style=>'text-align:left;'}
          = ecollect_request_template.request
        %td{:style=>'text-align:left;word-break: break-word;'}
          = ecollect_request_template.url

