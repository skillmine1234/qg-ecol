= link_to 'New E-Collect App', new_ecol_app_path
%br
%br
%h1 Listing E-Collect Apps
= render :partial => 'advanced_search'
%br
%br
%table.table.table-bordered.table-striped.table-hover{style: 'table-layout: fixed; width: 100%;'}
  .thead
    %th{:style=>'text-align:left; background-color: lightblue;'}
    %th{:style=>'text-align:left; background-color: lightblue;'}
    %th{:style=>'text-align:left; background-color: lightblue;'}
      App Code
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Customer Code			
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Validate URL
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Notify URL
			
  .tbody
    - @records.each do |ecol_app|
      %tr
        %td{:style=>'text-align:left;'}
          = link_to 'Show', ecol_app
        %td{:style=>'text-align:left;'}
          = link_to 'Edit', edit_ecol_app_path(ecol_app)
        %td{:style=>'text-align:left;'}
          = ecol_app.app_code
        %td{:style=>'text-align:left;'}
          = ecol_app.customer_code										
        %td{:style=>'text-align:left; word-wrap: break-word;'}
          = ecol_app.validate_url
        %td{:style=>'text-align:left; word-wrap: break-word;'}
          = ecol_app.notify_url