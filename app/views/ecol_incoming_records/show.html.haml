          %td.value
            = link_to "#{audit_count(@ecol_record.incoming_file_record)}", :controller => :ecol_incoming_records, :action => :audit_logs, :version_id => audit_count(@ecol_record.incoming_file_record), :id => @ecol_record.incoming_file_record_id
