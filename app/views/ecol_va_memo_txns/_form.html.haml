= simple_form_for @ecol_va_memo_txn, :html => {:class=>'form-horizontal', :autocomplete=>"off", :id => "iam_cust_user_form"} do |f|
  .control-group
    = f.label ' '
    #msg-error
      = error_message_for(@ecol_va_memo_txn, :base, :prepend_text => "")
  .form-main
    = f.hidden_field :lock_version
    = f.hidden_field :approved_id
    = f.hidden_field :approved_version
    .control-group
      = f.label :reference_no, "*Reference Number", :class => 'control-label'
      = f.text_field :reference_no, value: @ecol_va_memo_txn.get_reference_no, readOnly: true
      #msg-error
        = error_message_for(@ecol_va_memo_txn, :reference_no, :prepend_text => "")
    .control-group
      = f.label :txn_type, "Txn Type", :class => 'control-label'
      = f.select :txn_type, options_for_select(EcolVaMemoTxn::TXN_TYPES, @ecol_va_memo_txn.txn_type),:prompt => 'SELECT'
      #msg-error
        = error_message_for(@ecol_va_memo_txn, :txn_type, :prepend_text => "")
    .control-group
      = f.label :account_no, "*Account No.", :class => 'control-label'
      = f.text_field :account_no
      #msg-error
        = error_message_for(@ecol_va_memo_txn, :account_no, :prepend_text => "")
    .control-group
      = f.label :customer_code, "*Customer Code", :class => 'control-label'
      = f.text_field :customer_code
      #msg-error
        = error_message_for(@ecol_va_memo_txn, :customer_code, :prepend_text => "")
    .control-group
      = f.label :txn_amount, "*Txn Amount", :class => 'control-label'
      = f.number_field :txn_amount, :step => 2
      #msg-error
        = error_message_for(@ecol_va_memo_txn, :txn_amount, :prepend_text => "")
    .control-group
      = f.label :txn_desc, "Txn Description", :class => 'control-label'
      = f.text_field :txn_desc, maxlength: 255
      #msg-error
        = error_message_for(@ecol_va_memo_txn, :txn_desc, :prepend_text => "")
    .control-group
      = f.label :hold_no, "Hold No.", :class => 'control-label'
      = f.number_field :hold_no, :step => 1
      #msg-error
        = error_message_for(@ecol_va_memo_txn, :hold_no, :prepend_text => "")
    .control-group
      = f.label :hold_amount, "Hold Amount", :class => 'control-label'
      = f.text_field :hold_amount, :step => 2
      #msg-error
        = error_message_for(@ecol_va_memo_txn, :hold_amount, :prepend_text => "")


  .form-actions
    - (f.object.new_record? and f.object.reference_no.nil?) ? label_name = "Create" : label_name = "Update"
    = f.button "submit" ,:class=>"btn btn-primary", :id => 'submit_code', :value => label_name + ' Memo Txn'
    = link_to :Cancel,'/ecol_va_memo_txns', :name => 'cancel', :class=>"cancel btn"